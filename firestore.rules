rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // Users cannot delete their own accounts
    }
    
    // Departments collection (read-only for all authenticated users)
    match /departments/{departmentId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can modify departments
    }
    
    // Topics collection (read-only for all authenticated users)
    match /topics/{topicId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can modify topics
    }
    
    // Boards collection
    match /boards/{boardId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.auth.token.email_verified == true;
      allow update: if request.auth != null && 
        (resource.data.createdBy == request.auth.uid || 
         request.auth.token.email_verified == true);
      allow delete: if request.auth != null && 
        resource.data.createdBy == request.auth.uid;
    }
    
    // Posts collection
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.auth.token.email_verified == true;
      allow update: if request.auth != null && 
        (resource.data.authorId == request.auth.uid || 
         request.auth.token.email_verified == true);
      allow delete: if request.auth != null && 
        resource.data.authorId == request.auth.uid;
    }
    
    // Likes collection
    match /likes/{likeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.auth.token.email_verified == true &&
        likeId == request.auth.uid + '_' + resource.data.postId;
      allow delete: if request.auth != null && 
        likeId == request.auth.uid + '_' + resource.data.postId;
    }
    
    // Follows collection
    match /follows/{followId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
        request.auth.token.email_verified == true &&
        followId == request.auth.uid + '_' + resource.data.followeeId;
      allow delete: if request.auth != null && 
        followId == request.auth.uid + '_' + resource.data.followeeId;
    }
    
    // Chats collection
    match /chats/{chatId} {
      allow read, write: if request.auth != null && 
        request.auth.token.email_verified == true &&
        request.auth.uid in resource.data.participantIds;
    }
    
    // Messages collection
    match /messages/{messageId} {
      allow read, write: if request.auth != null && 
        request.auth.token.email_verified == true &&
        request.auth.uid in get(/databases/$(database)/documents/chats/$(resource.data.chatId)).data.participantIds;
    }
    
    // Reports collection
    match /reports/{reportId} {
      allow read: if request.auth != null && 
        (resource.data.reporterId == request.auth.uid || 
         request.auth.token.email_verified == true);
      allow create: if request.auth != null && 
        request.auth.token.email_verified == true &&
        resource.data.reporterId == request.auth.uid;
      allow update: if false; // Only admins can update reports
    }
    
    // Events collection
    match /events/{eventId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && 
        request.auth.token.email_verified == true;
    }
    
    // Feedback collection
    match /feedback/{feedbackId} {
      allow read: if request.auth != null && 
        (resource.data.authorId == request.auth.uid || 
         request.auth.token.email_verified == true);
      allow create: if request.auth != null && 
        request.auth.token.email_verified == true &&
        resource.data.authorId == request.auth.uid;
      allow update, delete: if false; // Only admins can modify feedback
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Archives collection
    match /archives/{archiveId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && 
        request.auth.token.email_verified == true;
    }
  }
}

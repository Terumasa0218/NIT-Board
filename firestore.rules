rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    function isOwner(userIdField) {
      return isSignedIn() && request.auth.uid == userIdField;
    }

    function isNonEmptyString(x) {
      return x is string && x.size() > 0;
    }

    function isValidSchoolYear(y) {
      return y is int && y >= 1 && y <= 4;
    }

    function isValidBoardCreate(data) {
      return data.keys().hasAll(['createdBy', 'universityId', 'departmentId', 'year', 'topicId'])
        && isNonEmptyString(data.createdBy)
        && isNonEmptyString(data.universityId)
        && isNonEmptyString(data.departmentId)
        && isNonEmptyString(data.topicId)
        && isValidSchoolYear(data.year);
    }

    function hasKey(data, key) {
      return data.keys().hasAny([key]);
    }

    function isValidBoardUpdate(oldData, newData) {
      return newData.createdBy == oldData.createdBy
        && newData.universityId == oldData.universityId
        && (
          (hasKey(oldData, 'departmentId')
            && hasKey(newData, 'departmentId')
            && isNonEmptyString(newData.departmentId))
          || (!hasKey(oldData, 'departmentId')
            && (!hasKey(newData, 'departmentId') || isNonEmptyString(newData.departmentId)))
        )
        && (
          (hasKey(oldData, 'year')
            && hasKey(newData, 'year')
            && isValidSchoolYear(newData.year))
          || (!hasKey(oldData, 'year')
            && (!hasKey(newData, 'year') || isValidSchoolYear(newData.year)))
        )
        && (
          (hasKey(oldData, 'topicId')
            && hasKey(newData, 'topicId')
            && isNonEmptyString(newData.topicId))
          || (!hasKey(oldData, 'topicId')
            && (!hasKey(newData, 'topicId') || isNonEmptyString(newData.topicId)))
        );
    }

    // Users collection (deployment verification comment)
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Departments collection
    match /departments/{departmentId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Topics collection
    match /topics/{topicId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Boards collection
    match /boards/{boardId} {
      allow read: if true;
      allow create: if isSignedIn()
        && request.resource.data.createdBy == request.auth.uid
        && isValidBoardCreate(request.resource.data);
      allow update: if (isOwner(resource.data.createdBy) || isAdmin())
        && isValidBoardUpdate(resource.data, request.resource.data);
      allow delete: if isOwner(resource.data.createdBy) || isAdmin();
    }

    // Posts collection
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.authorId) || isAdmin();
    }


    // Circles collection
    match /circles/{circleId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.uid;
      allow update: if isOwner(resource.data.createdBy) || isAdmin();
      allow delete: if isOwner(resource.data.createdBy) || isAdmin();
    }

    // Chats collection
    match /chats/{chatId} {
      allow read: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
      allow update: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      allow delete: if isAdmin();
    }

    // Messages collection
    match /messages/{messageId} {
      allow read: if isSignedIn() &&
        request.auth.uid in get(/databases/$(database)/documents/chats/$(resource.data.chatId)).data.participantIds;

      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.authorId
        && request.auth.uid in get(/databases/$(database)/documents/chats/$(request.resource.data.chatId)).data.participantIds;

      allow update, delete: if isAdmin();
    }

    // Likes collection
    match /likes/{likeId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Follows collection
    match /follows/{followId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.followerId;
      allow delete: if isOwner(resource.data.followerId) || isAdmin();
    }

    // Reports collection
    match /reports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn() && isOwner(request.resource.data.reporterId);
      allow update, delete: if isAdmin();
    }

    // Events collection
    match /events/{eventId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Feedback collection
    match /feedback/{feedbackId} {
      allow read: if isSignedIn() && (isOwner(resource.data.authorId) || isAdmin());
      allow create: if isSignedIn() && isOwner(request.resource.data.authorId);
      allow update, delete: if isAdmin();
    }


    match /pointHistory/{historyId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin();
    }

    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && isOwner(resource.data.userId);
      allow create: if isSignedIn() && isOwner(request.resource.data.userId);
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }

    // Archives collection
    match /archives/{archiveId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }
  }
}
